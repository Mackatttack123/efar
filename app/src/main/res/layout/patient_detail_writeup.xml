<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="400dp"
        android:layout_height="277dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="#eeeeee"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="Gender:"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView"/>

    <TextView
        android:id="@+id/TitleTextView"
        android:layout_width="0dp"
        android:layout_height="31dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="#aaaaaa"
        android:text="     Box 1: Patient Details"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="     Box 1: Patient Details"/>

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Name:"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TitleTextView"/>

    <EditText
        android:id="@+id/patientNameText"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/nameTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TitleTextView"/>

    <CheckBox
        android:id="@+id/femaleCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="8dp"
        android:checked="false"
        android:text="Female"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/maleCheckBox"
        app:layout_constraintTop_toBottomOf="@+id/patientNameText"/>

    <CheckBox
        android:id="@+id/maleCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:checked="false"
        android:text="Male"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/patientNameText"/>

    <TextView
        android:id="@+id/ageTextView"
        android:layout_width="87dp"
        android:layout_height="77dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:text="Age: (number or check a box)"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/femaleCheckBox"
        app:layout_constraintLeft_toRightOf="@+id/ageTextView"
        android:layout_marginLeft="19dp"/>

    <TextView
        android:id="@+id/yearsOldTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Years Old"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editText3"
        app:layout_constraintLeft_toRightOf="@+id/ageTextView"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"/>

    <CheckBox
        android:id="@+id/babyCheckBox"
        android:layout_width="72dp"
        android:layout_height="33dp"
        android:text="Baby"
        android:textSize="14sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ageTextView"
        android:layout_marginStart="8dp"/>

    <CheckBox
        android:id="@+id/adultCheckBox"
        android:layout_width="70dp"
        android:layout_height="33dp"
        android:text="Adult"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/TeenCheckBox"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ageTextView"
        android:layout_marginStart="8dp"/>

    <CheckBox
        android:id="@+id/TeenCheckBox"
        android:layout_width="67dp"
        android:layout_height="31dp"
        android:text="Teen"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/childCheckBox"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ageTextView"
        android:layout_marginStart="8dp"/>

    <CheckBox
        android:id="@+id/childCheckBox"
        android:layout_width="71dp"
        android:layout_height="31dp"
        android:text="Child"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/babyCheckBox"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ageTextView"
        android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>