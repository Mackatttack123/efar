<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_patient_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#DDDDDD"
    tools:context="com.southafricaproject.efar.PatientInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="updates will appear here"
            android:textSize="50px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"
            android:id="@+id/user_update_info_screen"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/patient_phone_number"
            android:hint="Phone Number"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:background="#FFFFFF"
            android:padding="10dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:layout_marginTop="160dp"
            android:id="@+id/patient_address"
            android:hint="Specific Address"
            android:layout_centerHorizontal="true"
            android:background="#FFFFFF"
            android:padding="10dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="15"
            android:layout_marginTop="250dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/patient_whats_wrong"
            android:hint="What's wrong?"
            android:background="#FFFFFF"
            android:padding="10dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="15"
            android:layout_marginTop="340dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/patient_other_info"
            android:hint="Other Information"
            android:background="#FFFFFF"
            android:padding="10dp"/>

        <Button
            android:text="@string/submit_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp"
            android:id="@+id/patient_info_sumbmit_button" />

    </RelativeLayout>

</ScrollView>