<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#d3dee7"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<TextView
    android:text="updates will appear here"
    android:textSize="20sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#ff0000"
    android:id="@+id/user_update_info_screen"
    android:layout_marginTop="20sp"
    android:textAlignment="center"
    android:layout_centerHorizontal="true"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginRight="8sp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="8sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintHorizontal_bias="0.503"/>


<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="phone"
    android:ems="10"
    android:id="@+id/patient_phone_number"
    android:hint="@string/Phone_Number"
    android:layout_centerHorizontal="true"
    android:background="#FFFFFF"
    android:padding="10sp"
    android:maxLength="14"
    android:layout_marginRight="8sp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="8sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintHorizontal_bias="0.503"
    android:layout_marginTop="50sp"
    app:layout_constraintTop_toBottomOf="@+id/user_update_info_screen"/>

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:ems="15"
    android:id="@+id/patient_other_info"
    android:hint="@string/Other_Information"
    android:background="#FFFFFF"
    android:padding="10sp"
    android:layout_below="@+id/patient_phone_number"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="19dp"
    app:layout_constraintTop_toBottomOf="@+id/patient_phone_number"
    android:layout_marginRight="8sp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="8sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintHorizontal_bias="0.5"/>

<Button
    android:text="@string/submit_login_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/patient_info_sumbmit_button"
    android:layout_below="@+id/patient_other_info"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="50sp"
    app:layout_constraintTop_toBottomOf="@+id/patient_other_info"
    android:layout_marginRight="8sp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="8sp"
    app:layout_constraintLeft_toLeftOf="parent"/>


</android.support.constraint.ConstraintLayout>