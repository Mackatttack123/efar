<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#d3dee7"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="@string/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0060ba"
        android:id="@+id/to_login_button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8sp"
        android:layout_marginLeft="8sp"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
        android:text=""
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:id="@+id/user_update"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginRight="8sp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30sp"
        app:layout_constraintTop_toBottomOf="@+id/to_login_button"/>

    <!--
    <Button
        android:text="@string/help_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle"
        android:textSize="70sp"
        android:padding="40sp"
        android:textColor="#ffe3e3"
        android:id="@+id/help_me_button"
        android:layout_marginTop="145sp"
        android:layout_centerHorizontal="true" />
        -->

    <Button
        android:id="@+id/help_me_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="75dp"
        android:layout_marginLeft="8sp"
        android:layout_marginRight="8sp"
        android:layout_marginTop="75sp"
        android:padding="40sp"
        android:text="@string/help_button"
        android:textColor="#e20505"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_update"
        app:layout_constraintVertical_bias="0.3"/>
</android.support.constraint.ConstraintLayout>
